@model Hotel_Management_System.Models.VMLogin;

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body class="login-body">

    <!-- Login Box -->
    <div id="login-box">
        <!-- Hotel Branding -->
        <div class="hotel-branding">
            <img src="/images/hotel-logo.png" alt="Hotel Logo" class="hotel-logo">
            <div class="hotel-name">Nuxus Hotel</div> 
        </div>

        <!-- Login Form -->
        @using (Html.BeginForm("Login", "Access", FormMethod.Post))
        {
            <div class="form-group">
                <label for="username">Email:</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Enter your email", @required = true })
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter your password", @required = true })
            </div>
            <div class="form-group">
                <input type="submit" name="submit" class="btn btn-info" value="Login">
            </div>

            <p>Don't have an account? <a href="@Url.Action("Register", "Access")">Register first</a>.</p>
            @if (ViewData["ValidateMessage"] != null)
            {
                <div class="error-message">
                    @ViewData["ValidateMessage"]
                </div>
            }
        }
    </div>

</body>
</html>
