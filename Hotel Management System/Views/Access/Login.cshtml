@model Hotel_Management_System.Models.VMLogin;

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <title>Login - Nuxus Hotel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/auth.css">
</head>
<body class="login-body">

    <!-- Login Box -->
    <div id="login-box">
        <!-- Hotel Branding -->
        <div class="hotel-branding">
            <img src="/images/hotel-logo.png" alt="Hotel Logo" class="hotel-logo">
            <div class="hotel-name">NUXUS HOTEL</div>
            <p class="mt-2 text-muted">Sign in to your account</p>
        </div>

        <!-- Login Form -->
        @using (Html.BeginForm("Login", "Access", new { returnUrl = Context.Request.Query["ReturnUrl"] }, FormMethod.Post))
        {
            <!-- This hidden field will store the return URL -->
            <input type="hidden" name="returnUrl" value="@Context.Request.Query["ReturnUrl"]" />

            <div class="form-group">
                <label for="Email">
                    <i class="fas fa-envelope"></i>
                    <span>Email Address</span>
                </label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Enter your email", @required = true })
            </div>
            <div class="form-group">
                <label for="Password">
                    <i class="fas fa-lock"></i>
                    <span>Password</span>
                </label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter your password", @required = true })
            </div>

            <!-- Remember Me Checkbox -->
            <div class="form-check">
                @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                <label class="form-check-label" for="RememberMe">Remember Me</label>
            </div>

            <div class="form-group mb-0">
                <button type="submit" class="btn btn-info w-100">
                    <i class="fas fa-sign-in-alt me-2"></i>LOGIN
                </button>
            </div>

            <div class="login-divider">
                <span>or</span>
            </div>

            <div class="return-links">
                <p>Don't have an account? <a href="@Url.Action("Register", "Access")">Register now</a></p>
                <p><a href="@Url.Action("Index", "Home")"><i class="fas fa-home me-1"></i>Continue as Guest</a></p>
            </div>

            @if (ViewData["ValidateMessage"] != null)
            {
                <div class="error-message">
                    <i class="fas fa-exclamation-circle"></i>@ViewData["ValidateMessage"]
                </div>
            }
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>