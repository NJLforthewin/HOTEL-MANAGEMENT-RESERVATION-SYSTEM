@model Hotel_Management_System.Models.VMRegister

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <title>Register - Nuxus Hotel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/auth.css">
</head>
<body class="register-body">

    <!-- Register Box -->
    <div id="register-box">
        <!-- Hotel Branding -->
        <div class="hotel-branding">
            <img src="/images/hotel-logo.png" alt="Hotel Logo" class="hotel-logo">
            <div class="hotel-name">NUXUS HOTEL</div>
            <p class="mt-2 text-muted">Create your account</p>
        </div>

        <!-- Register Form -->
        @using (Html.BeginForm("Register", "Access", FormMethod.Post))
        {
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="FirstName">
                            <i class="fas fa-user"></i>
                            <span>First Name</span>
                        </label>
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "Enter first name", @required = true })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="LastName">
                            <i class="fas fa-user"></i>
                            <span>Last Name</span>
                        </label>
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Enter last name", @required = true })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="Email">
                    <i class="fas fa-envelope"></i>
                    <span>Email Address</span>
                </label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Enter your email", @required = true, type = "email" })
            </div>

            <div class="form-group">
                <label for="Password">
                    <i class="fas fa-lock"></i>
                    <span>Password</span>
                </label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter your password", @required = true, minlength = "6" })
                <small class="form-text text-muted">Password must be at least 6 characters long</small>
            </div>

            <div class="form-group mb-0">
                <button type="submit" class="btn btn-info w-100">
                    <i class="fas fa-user-plus me-2"></i>CREATE ACCOUNT
                </button>
            </div>

            <div class="login-divider">
                <span>or</span>
            </div>

            <div class="return-links">
                <p>Already have an account? <a href="@Url.Action("Login", "Access")">Sign in</a></p>
                <p><a href="@Url.Action("Index", "Home")"><i class="fas fa-home me-1"></i>Return to Homepage</a></p>
            </div>

            @if (ViewData["ValidateMessage"] != null)
            {
                <div class="error-message">
                    <i class="fas fa-exclamation-circle"></i>@ViewData["ValidateMessage"]
                </div>
            }
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>