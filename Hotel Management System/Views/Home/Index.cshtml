<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nuxus Hotel - Rooms</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body class="index-body">

    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="#">Nuxus Hotel</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Rooms</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Contact</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <h1 class="text-center my-4">Welcome to Nuxus Hotel</h1>
        <p class="text-center">Dear Guest, please explore our rooms and book your stay.</p>

        <!-- Deluxe Rooms -->
        <div class="room-section">
            <h2>Deluxe Rooms</h2>
            <div class="row">
                <div class="col-md-4">
                    <img src="/images/delux1.jpg" alt="Deluxe 1 Room">
                    <h3>Deluxe 1 Room</h3>
                    <a href="#" class="btn btn-primary">Book Now</a>
                </div>
                <div class="col-md-4">
                    <img src="/images/delux2.jpg" alt="Deluxe 2 Room">
                    <h3>Deluxe 2 Room</h3>
                    <a href="#" class="btn btn-primary">Book Now</a>
                </div>
                <div class="col-md-4">
                    <img src="/images/delux3.jpg" alt="Deluxe 3 Room">
                    <h3>Deluxe 3 Room</h3>
                    <a href="#" class="btn btn-primary">Book Now</a>
                </div>
            </div>
        </div>

        <!-- Other Rooms -->
        <div class="room-section">
            <h2>Other Rooms</h2>
            <div class="row">
                <div class="col-md-4">
                    <img src="/images/double.jpg" alt="Double Room">
                    <h3>Double Room</h3>
                    <a href="#" class="btn btn-primary">Book Now</a>
                </div>
                <div class="col-md-4">
                    <img src="/images/single.jpg" alt="Single Room">
                    <h3>Single Room</h3>
                    <a href="#" class="btn btn-primary">Book Now</a>
                </div>
                <div class="col-md-4">
                    <img src="/images/standard.jpg" alt="Standard Room">
                    <h3>Standard Room</h3>
                    <a href="#" class="btn btn-primary">Book Now</a>
                </div>
            </div>
        </div>

        <div class="room-section">
            <h2>Triple Rooms</h2>
            <div class="row">
                <div class="col-md-4">
                    <img src="/images/triple.jpg" alt="Double Room">
                    <h3>Triple Room</h3>
                    <a href="#" class="btn btn-primary">Book Now</a>
                </div>
                <div class="col-md-4">
                    <img src="/images/triple2.jpg" alt="Single Room">
                    <h3>Triple Room</h3>
                    <a href="#" class="btn btn-primary">Book Now</a>
                </div>
                <div class="col-md-4">
                    <img src="/images/triple3.jpg" alt="Standard Room">
                    <h3>Triple Room</h3>
                    <a href="#" class="btn btn-primary">Book Now</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
