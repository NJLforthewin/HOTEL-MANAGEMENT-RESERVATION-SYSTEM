@{
    ViewData["Title"] = "Housekeeping Inventory";
    Layout = "~/Views/Shared/HousekeepingLayout.cshtml";
}

<div class="container-fluid">
    <div class="card housekeeping-card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-box-open me-2"></i> Housekeeping Inventory</h5>
            <div>
                <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#stockReceiveModal">
                    <i class="fas fa-plus me-1"></i> Receive Stock
                </button>
                <button class="btn btn-sm btn-outline-secondary ms-2" id="printInventoryBtn">
                    <i class="fas fa-print me-1"></i> Print
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="inventory-summary mb-4">
                <div class="row mb-3">
                    <div class="col-md-3 mb-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body">
                                <h6 class="card-title">Total Items</h6>
                                <h3 class="card-text">5</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card bg-success text-white">
                            <div class="card-body">
                                <h6 class="card-title">Well Stocked</h6>
                                <h3 class="card-text">3</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card bg-warning text-dark">
                            <div class="card-body">
                                <h6 class="card-title">Low Stock</h6>
                                <h3 class="card-text">2</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card bg-danger text-white">
                            <div class="card-body">
                                <h6 class="card-title">Out of Stock</h6>
                                <h3 class="card-text">0</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th>Total Stock</th>
                            <th>In Use</th>
                            <th>Available</th>
                            <th>Reorder Level</th>
                            <th>Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.InventoryItems)
                        {
                            string statusClass = "";
                            string statusText = "";

                            if (item.Available <= 0)
                            {
                                statusClass = "bg-danger";
                                statusText = "Out of Stock";
                            }
                            else if (item.Available <= item.ReorderLevel)
                            {
                                statusClass = "bg-warning text-dark";
                                statusText = "Low Stock";
                            }
                            else
                            {
                                statusClass = "bg-success";
                                statusText = "Well Stocked";
                            }

                            <tr class="inventory-row">
                                <td><strong>@item.ItemName</strong></td>
                                <td>@item.TotalStock</td>
                                <td>@item.InUse</td>
                                <td>@item.Available</td>
                                <td>@item.ReorderLevel</td>
                                <td><span class="badge @statusClass">@statusText</span></td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <button type="button" class="btn btn-sm btn-outline-primary issue-btn"
                                                data-bs-toggle="modal" data-bs-target="#issueItemModal"
                                                data-item="@item.ItemName" data-available="@item.Available">
                                            <i class="fas fa-share"></i> Issue
                                        </button>
                                        <button type="button" class="btn btn-sm btn-outline-secondary history-btn"
                                                data-bs-toggle="modal" data-bs-target="#itemHistoryModal"
                                                data-item="@item.ItemName">
                                            <i class="fas fa-history"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Receive Stock Modal -->
<div class="modal fade" id="stockReceiveModal" tabindex="-1" aria-labelledby="stockReceiveModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="stockReceiveModalLabel">Receive New Stock</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="stockReceiveForm">
                    <div class="mb-3">
                        <label for="itemSelect" class="form-label">Item</label>
                        <select class="form-select" id="itemSelect" required>
                            <option value="" selected disabled>Select item</option>
                            @foreach (var item in ViewBag.InventoryItems)
                            {
                                <option value="@item.ItemName">@item.ItemName</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="quantityInput" class="form-label">Quantity</label>
                        <input type="number" class="form-control" id="quantityInput" min="1" required>
                    </div>
                    <div class="mb-3">
                        <label for="receiptNumber" class="form-label">Receipt Number</label>
                        <input type="text" class="form-control" id="receiptNumber">
                    </div>
                    <div class="mb-3">
                        <label for="supplierInput" class="form-label">Supplier</label>
                        <input type="text" class="form-control" id="supplierInput">
                    </div>
                    <div class="mb-3">
                        <label for="notesInput" class="form-label">Notes</label>
                        <textarea class="form-control" id="notesInput" rows="2"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveReceiveBtn">Save</button>
            </div>
        </div>
    </div>
</div>

<!-- Issue Item Modal -->
<div class="modal fade" id="issueItemModal" tabindex="-1" aria-labelledby="issueItemModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="issueItemModalLabel">Issue Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="issueItemForm">
                    <div class="mb-3">
                        <p><strong>Item: </strong><span id="issueItemName"></span></p>
                        <p><strong>Available: </strong><span id="issueItemAvailable"></span></p>
                    </div>
                    <div class="mb-3">
                        <label for="issueQuantityInput" class="form-label">Quantity to Issue</label>
                        <input type="number" class="form-control" id="issueQuantityInput" min="1" required>
                    </div>
                    <div class="mb-3">
                        <label for="issuedToInput" class="form-label">Issued To</label>
                        <input type="text" class="form-control" id="issuedToInput" required>
                    </div>
                    <div class="mb-3">
                        <label for="roomNumberInput" class="form-label">Room Number (if applicable)</label>
                        <input type="text" class="form-control" id="roomNumberInput">
                    </div>
                    <div class="mb-3">
                        <label for="issueNotesInput" class="form-label">Notes</label>
                        <textarea class="form-control" id="issueNotesInput" rows="2"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveIssueBtn">Issue Items</button>
            </div>
        </div>
    </div>
</div>

<!-- Item History Modal -->
<div class="modal fade" id="itemHistoryModal" tabindex="-1" aria-labelledby="itemHistoryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="itemHistoryModalLabel">Item Transaction History</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h6 id="historyItemName" class="mb-3"></h6>

                <ul class="nav nav-tabs mb-3" id="historyTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all-transactions" type="button" role="tab" aria-controls="all-transactions" aria-selected="true">All Transactions</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="received-tab" data-bs-toggle="tab" data-bs-target="#received" type="button" role="tab" aria-controls="received" aria-selected="false">Received</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="issued-tab" data-bs-toggle="tab" data-bs-target="#issued" type="button" role="tab" aria-controls="issued" aria-selected="false">Issued</button>
                    </li>
                </ul>

                <div class="tab-content" id="historyTabContent">
                    <!-- All transactions tab -->
                    <div class="tab-pane fade show active" id="all-transactions" role="tabpanel" aria-labelledby="all-tab">
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Type</th>
                                        <th>Quantity</th>
                                        <th>User</th>
                                        <th>Notes</th>
                                    </tr>
                                </thead>
                                <tbody id="allTransactionsBody">
                                    <!-- Will be populated dynamically -->
                                    <tr>
                                        <td>Apr 9, 2025 10:30 AM</td>
                                        <td><span class="badge bg-success">Received</span></td>
                                        <td>+50</td>
                                        <td>John Doe</td>
                                        <td>Monthly stock delivery</td>
                                    </tr>
                                    <tr>
                                        <td>Apr 8, 2025 2:15 PM</td>
                                        <td><span class="badge bg-primary">Issued</span></td>
                                        <td>-10</td>
                                        <td>Jane Smith</td>
                                        <td>For rooms 101-105</td>
                                    </tr>
                                    <tr>
                                        <td>Apr 6, 2025 9:45 AM</td>
                                        <td><span class="badge bg-primary">Issued</span></td>
                                        <td>-15</td>
                                        <td>Robert Johnson</td>
                                        <td>For VIP guest rooms</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Received tab -->
                    <div class="tab-pane fade" id="received" role="tabpanel" aria-labelledby="received-tab">
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Quantity</th>
                                        <th>Supplier</th>
                                        <th>Receipt #</th>
                                        <th>Received By</th>
                                    </tr>
                                </thead>
                                <tbody id="receivedBody">
                                    <!-- Will be populated dynamically -->
                                    <tr>
                                        <td>Apr 9, 2025 10:30 AM</td>
                                        <td>50</td>
                                        <td>Hotel Supplies Inc.</td>
                                        <td>INV-12345</td>
                                        <td>John Doe</td>
                                    </tr>
                                    <tr>
                                        <td>Mar 10, 2025 9:15 AM</td>
                                        <td>100</td>
                                        <td>Hotel Supplies Inc.</td>
                                        <td>INV-12255</td>
                                        <td>John Doe</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Issued tab -->
                    <div class="tab-pane fade" id="issued" role="tabpanel" aria-labelledby="issued-tab">
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Quantity</th>
                                        <th>Issued To</th>
                                        <th>Room</th>
                                        <th>Issued By</th>
                                    </tr>
                                </thead>
                                <tbody id="issuedBody">
                                    <!-- Will be populated dynamically -->
                                    <tr>
                                        <td>Apr 8, 2025 2:15 PM</td>
                                        <td>10</td>
                                        <td>Housekeeping Staff</td>
                                        <td>101-105</td>
                                        <td>Jane Smith</td>
                                    </tr>
                                    <tr>
                                        <td>Apr 6, 2025 9:45 AM</td>
                                        <td>15</td>
                                        <td>Housekeeping Staff</td>
                                        <td>201-210</td>
                                        <td>Robert Johnson</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="exportHistoryBtn">Export History</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Print button
            $('#printInventoryBtn').on('click', function() {
                window.print();
            });

            // Save received stock
            $('#saveReceiveBtn').on('click', function() {
                var item = $('#itemSelect').val();
                var quantity = $('#quantityInput').val();

                if (!item || !quantity || quantity < 1) {
                    alert('Please select an item and enter a valid quantity');
                    return;
                }

                // In a real app, this would submit via AJAX
                alert(`Received ${quantity} units of ${item}`);
                $('#stockReceiveModal').modal('hide');
            });

            // Issue item modal setup
            $('.issue-btn').on('click', function() {
                var item = $(this).data('item');
                var available = $(this).data('available');

                $('#issueItemName').text(item);
                $('#issueItemAvailable').text(available);
                $('#issueQuantityInput').attr('max', available);
            });

            // Save issued items
            $('#saveIssueBtn').on('click', function() {
                var item = $('#issueItemName').text();
                var quantity = $('#issueQuantityInput').val();
                var available = parseInt($('#issueItemAvailable').text());
                var issuedTo = $('#issuedToInput').val();

                if (!quantity || quantity < 1 || quantity > available) {
                    alert('Please enter a valid quantity');
                    return;
                }

                if (!issuedTo) {
                    alert('Please enter who the items are being issued to');
                    return;
                }

                // In a real app, this would submit via AJAX
                alert(`Issued ${quantity} units of ${item} to ${issuedTo}`);
                $('#issueItemModal').modal('hide');
            });

            // Item history modal setup
            $('.history-btn').on('click', function() {
                var item = $(this).data('item');
                $('#historyItemName').text(item + ' - Transaction History');

                // In a real app, this would fetch data via AJAX
            });

            // Export history
            $('#exportHistoryBtn').on('click', function() {
                alert('Exporting history (this would download a CSV/Excel file in a real application)');
            });
        });
    </script>
}